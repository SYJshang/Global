#import "YJTextViewController.h"
#import "YJSendOrderController.h"
#import "UITextView+YLTextView.h"

@interface YJTextViewController ()

@property (nonatomic, strong) UIView *backBtn;

@end

@implementation YJTextViewController

- (void)viewWillAppear:(BOOL)animated{
    [super viewWillAppear:animated];
    
    self.backBtn = [[UIView alloc]initWithFrame:CGRectMake(0, 0, screen_width, 64)];
    self.backBtn.backgroundColor = [UIColor greenColor];
    self.backBtn.alpha = 0.6;
    [self.view addSubview:self.backBtn];
    
    UILabel *lab = [[UILabel alloc]init];
    [self.backBtn addSubview:lab];
    lab.text = @"其他内容";
    lab.textColor = [UIColor blackColor ];
    lab.textAlignment = NSTextAlignmentCenter;
    lab.font = [UIFont systemFontOfSize:19.0];
    lab.sd_layout.leftSpaceToView(self.backBtn,50).rightSpaceToView(self.backBtn,50).bottomSpaceToView(self.backBtn,10).heightIs(22);
    
    UIButton *back = [UIButton buttonWithType:UIButtonTypeCustom];
    [self.backBtn addSubview:back];
    [back setImage:[UIImage imageNamed:@"backBtn"] forState:UIControlStateNormal];
    [back addTarget:self action:@selector(backVC) forControlEvents:UIControlEventTouchUpInside];
    back.sd_layout.leftSpaceToView(self.backBtn,10).centerYEqualToView(lab).heightIs(22).widthIs(25);
    
    UIButton *finsh = [UIButton buttonWithType:UIButtonTypeCustom];
    [self.backBtn addSubview:finsh];
    [finsh setTitle:@"完成" forState:UIControlStateNormal];
    finsh.titleLabel.font = [UIFont systemFontOfSize:16.0];
    [finsh setTitleColor:TextColor forState:UIControlStateNormal];
    [finsh addTarget:self action:@selector(finshBack) forControlEvents:UIControlEventTouchUpInside];
    finsh.sd_layout.rightSpaceToView(self.backBtn,10).centerYEqualToView(lab).heightIs(22).widthIs(60);
    
    
}

- (void)finshBack{
    
    if (self.textView.text != nil && ![self.textView.text isEqualToString:@""]) {
        if (self.block) {
            self.block(self.textView.text);
            [self dismissViewControllerAnimated:YES completion:nil];
        }
    
    }else{
        
        UIAlertView *alert = [[UIAlertView alloc] initWithTitle:@"提示" message:@"请输入内容" delegate:self cancelButtonTitle:@"取消" otherButtonTitles:@"确定", nil];
        [alert show];
    }
}

- (void)backVC{
    
    [self dismissViewControllerAnimated:YES completion:nil];
}



- (void)viewDidLoad {
    [super viewDidLoad];
    
    self.view.backgroundColor = BackGray;
    
    self.textView = [[UITextView alloc]initWithFrame:CGRectMake(1, 64, screen_width - 2, 150)];
    [self.view addSubview:self.textView];
    self.textView.placeholder = @"请输入附加内容";
    self.textView.limitLength = @300;
    self.textView.font = [UIFont systemFontOfSize:15.0];
    self.textView.layer.masksToBounds = YES;
    self.textView.layer.cornerRadius = 5;
    self.textView.layer.borderColor = TextColor.CGColor;
    self.textView.layer.borderWidth = 1.0;
    self.textView.textColor = [UIColor colorWithRed:70.0 / 255.0 green:70.0 / 255.0 blue:70.0 / 255.0 alpha:1.0];
    
    
    
    // Do any additional setup after loading the view.
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

