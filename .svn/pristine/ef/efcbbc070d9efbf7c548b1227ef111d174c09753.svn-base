#import "YJAllReceivingController.h"
#import "YJGOrderCell.h"

@interface YJAllReceivingController ()<UITableViewDelegate,UITableViewDataSource>

@property (nonatomic, strong) UITableView *tableView;

@end

@implementation YJAllReceivingController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    self.tableView = [[UITableView alloc]initWithFrame:CGRectMake(0, 44, screen_width, screen_height - 108) style:UITableViewStylePlain];
    [self.view addSubview:self.tableView];
    self.tableView.delegate = self;
    self.tableView.dataSource = self;
    self.tableView.separatorStyle = UITableViewCellSeparatorStyleNone;
    self.tableView.backgroundColor = [UIColor colorWithRed:240 / 255.0 green:240 / 255.0 blue:240 / 255.0 alpha:1.0];
    
    [self.tableView registerClass:[YJGOrderCell class] forCellReuseIdentifier:@"cell"];

    
    // Do any additional setup after loading the view.
}

#pragma mark - table view dataSource

- (CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath{
    
    return 180 * KHeight_Scale;
    
}

- (NSInteger)numberOfSectionsInTableView:(UITableView *)tableView {
    return 1;
}

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section {
    return 10;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath {
    
    YJGOrderCell *cell = [tableView dequeueReusableCellWithIdentifier:@"cell"];
    
    if(cell == nil) {
        cell = [[YJGOrderCell alloc] initWithStyle:UITableViewCellStyleDefault reuseIdentifier:@"cell"];
    }
    
    if (indexPath.row == 0) {
        
        UIView *view = [[UIView alloc]init];
        view.backgroundColor = [UIColor colorWithWhite:0.9 alpha:0.2];
        [cell.contentView addSubview:view];
        view.frame = CGRectMake(0, 0, screen_width, 180 * KHeight_Scale);
        
        cell.backgroundColor = BackGray;
        cell.reserveLab.textColor = [UIColor grayColor];
        cell.allTimeLab.textColor = [UIColor grayColor];
        cell.findLab.textColor = [UIColor grayColor];
        
        
        [cell.receiveBtn setTitleColor:[UIColor grayColor] forState:UIControlStateNormal];
        cell.receiveBtn.layer.borderColor = [UIColor grayColor].CGColor;
        [cell.relationBtn setTitleColor:[UIColor grayColor] forState:UIControlStateNormal];
        cell.relationBtn.layer.borderColor = [UIColor grayColor].CGColor;
        [cell.refuseBtn setTitleColor:[UIColor grayColor] forState:UIControlStateNormal];
        cell.refuseBtn.layer.borderColor = [UIColor grayColor].CGColor;
        
        UIImageView *img = [[UIImageView alloc]initWithImage:[UIImage imageNamed:@"shixiao"]];
        [cell.contentView addSubview:img];
        img.frame = CGRectMake(screen_width - 100, 40, 60, 45);
        
    }else{
        
        
    }
    
    return cell;
}

#pragma mark - table view delegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath {
    
//    kTipAlert(@"<%ld> selected...", indexPath.row);
}


- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

